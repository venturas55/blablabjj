<div class="container p-2">
    <h1>Cambios en el plan:  {{item.name}}</h1>

    <div class="row">
        <div class="col-6 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/actividades/edit/{{item.id}}" method="POST">
                        <div class="form-group"><input class="form-control" type="text" name="nombre"
                                placeholder="Nombre" value="{{item.name}}" autofocus /> </div>
                        <div class="form-group"><input class="form-control" type="text" name="descripcion"
                                placeholder="descripcion" value="{{item.description}}" />
                        </div>
                        <div class="form-group"><input class="form-control" type="number" name="price" step="0.01" title="Currency"
                                placeholder="price" value="{{stripeprecio item.default_price.unit_amount}}" />
                        </div>
                                       <button class="btn btn-primary btn-block">Guardar</button>
                    </form>
                     <a class="btn btn-warning btn-block" href="javascript:void(0)" onclick="history.back();">Volver</a>
                </div>
            </div>
        </div>
    </div>
 </div>
