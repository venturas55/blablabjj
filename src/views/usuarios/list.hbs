<div class="container p-2 mb-5">
  <div class="row text-center m-4">
    <div class="col-12 text-center">
      <a href="/usuarios/add" class="m-4"> <button class="btn btn-warning">NUEVO USUARIO</button></a>
      <a class="btn btn-warning btn-block" href="javascript:void(0)" onclick="history.back();">Volver</a>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      {{#if usuarios}}
      <table class="mt-4 table table-dark table-striped">
        <tr>
          <th>Imagen</th>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Nacionalidad</th>
          <th>Nacimiento</th>
          <th>Instructor</th>
          <th>Accion</th>

        </tr>
        {{#each usuarios}}
        <tr>
               <td> 
            {{>avatar size="xs" url=this.pictureURL}}
          </td>
          <td>{{nombre}}</td>
          <td>{{apellidos}} </td>
          <td>{{nacionalidad}}</td>
          <td>{{formatearSp fecha_nacimiento}}</td>
          <td>{{instructor}}</td>
          <td>
            <a href="/usuarios/edit/{{this.id}}" class="text-warning"><i class="fa-solid fa-pen"></i>Edit</a>
            <a href="/usuarios/delete/{{this.id}}" class="text-warning"><i class="fa-solid fa-trash"></i>Del</a>
          </td>
        </tr>

        {{/each}}
      </table>
      {{else}}
      <div class="col-md-4-mx-auto">
        <div class="card card-body text-center">

          <tr>No hay usuarios guardados <a href="/usuarios/add"> Crea uno!</a></tr>


        </div>
      </div>
      {{/if}}

    </div>

  </div>
</div>