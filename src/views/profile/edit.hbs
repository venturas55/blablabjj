<div class="container p-4">
  <div class="row4">
    <div class="col-md-5 mx-auto">
      <div class="card text-center">
        <div class="card-body">

          <h3>Bienvenid@ {{item.usuario}} </h3>

          {{>avatar size="l" url=item.pictureURL}}
          <input type="hidden" name="id" value="{{item.id}}" />

          <form action="/usuarios/edit/{{item.id}}" method="POST">
            <div class="form-group">
              <label for="nombre">Nombre</label>
              <input type="text" value="{{item.nombre}}" name="nombre" class="form-control" />
            </div>
            <div class="form-group">
              <label for="apellidos">Apellidos</label>
              <input type="text" value="{{item.apellidos}}" name="apellidos" class="form-control" />
            </div>
            <div class="form-group">
              <label for="usuario">Usuario</label>
              <input type="text" value="{{item.usuario}}" name="usuario" class="form-control" />
            </div>
            <div class="form-group">
              <label for="email">eMail</label>
              <input type="text" value="{{item.email}}" name="email" class="form-control" />
            </div>
            <div class="form-group">
              <label for="telefono">Telefono</label>
              <input type="text" value="{{item.telefono}}" name="telefono" class="form-control" />
            </div>
            <div class="form-group">
              <label for="cinturon">Cinturon</label>
              <select id="cinturon" name="cinturon" class="mt-3">
                {{#each cinturones}}
                <option value="{{this.value}}" {{#when this.value 'eq' ../item.cinturon }} selected {{/when}}> {{this.nombre}}</option>
                {{/each}}
              </select>

              <label for="grado">Grados</label>
              <select id="numeros" name="grado">
                {{#each grados}}
                <option value="{{this.value}}" {{#when this.value 'eq' ../item.grado }} selected {{/when}}> {{this.nombre}}</option>
                {{/each}}
              </select>
            </div>

            <div class="form-group">
              <label for="peso">Peso</label>
              <input type="number" value="{{item.peso}}" name="peso" class="form-control" />
            </div>

            <div class="form-group">
              <label for="fecha_nacimiento">Fecha nacimiento {{formatearEn item.fecha_nacimiento}}</label>
              <input type="date" value="{{formatearEn item.fecha_nacimiento}}" name="fecha_nacimiento"
                class="form-control" required />
            </div>

            <div class="form-group">
              <label for="nacionalidad">Selecciona tu país: {{item.nacionalidad }}</label>
              <select id="pais" name="nacionalidad">
                <option value="">--Seleccionar-- </option>
                {{#each paises}}
                <option value="{{this.id}}" {{#when this.id 'eq' ../item.nacionalidad }} selected {{/when}}>
                  {{this.nombre}}</option>
                {{/each}}


              </select>
            </div>
            <div class="form-group">
              <label for="nif">NIF</label>
              <input type="text" value="{{item.nif}}" name="nif" class="form-control" />
            </div>
        </div>
        <button class="btn btn-primary m-4"> Guardar cambios </button>
        </form>
        <div class="form-group">
          <a href="/usuarios/get/{{item.id}}" class="btn btn-danger m-4"> Cancelar </a>
        </div>
        <a href="/usuarios/editpass/{{item.id}}" class="btn btn-danger m-4"> Cambiar Contraseña </a>
      </div>
    </div>
  </div>
</div>