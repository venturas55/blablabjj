<div class="container p-2">
    <h1>Cambios en la actividad {{item.actividad_id}} - {{item.nombre}}</h1>

    <div class="row">

        <div class="col-md-6 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/actividades/edit/{{item.actividad_id}}" method="POST">
                        <div class="form-group"><input class="form-control" type="text" name="nombre"
                                value="{{item.nombre}}" autofocus /> </div>
                        <div class="form-group"><input class="form-control" type="text" name="descripcion"
                                value="{{item.descripcion}}" />
                        </div>
        

                        <button class="btn btn-primary btn-block">Guardar</button>
                    </form>
                    <a class="btn btn-warning btn-block" href="javascript:void(0)" onclick="history.back();">Volver</a>

                </div>
            </div>
        </div>
    </div>
</div>

